<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/qtDarkBlue" />
                    <stroke android:width="1dp" android:color="@color/qtDarkGrey" />
                    <padding android:bottom="9dp" android:left="10dp" android:right="7dp" android:top="9dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/icon_shuffle_light" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/qtDarkGrey" />
                    <stroke android:width="1dp" android:color="@color/qtDarkGrey" />
                    <padding android:bottom="9dp" android:left="10dp" android:right="7dp" android:top="9dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/icon_shuffle_dark" />
        </layer-list>
    </item>
</selector>