<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <selector>
            <item app:state_playing="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/valhalla" />
                        </shape>
                    </item>
                    <item
                        android:width="1dp"
                        android:gravity="left">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/qtLightGrey" />
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item app:state_paused="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/valhalla" />
                        </shape>
                    </item>
                    <item
                        android:width="1dp"
                        android:gravity="left">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/qtLightGrey" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>    <item android:gravity="top">
        <shape>
            <size android:height="1dp" />
            <solid android:color="@color/qtDarkGrey" />
        </shape>
    </item>
</layer-list>